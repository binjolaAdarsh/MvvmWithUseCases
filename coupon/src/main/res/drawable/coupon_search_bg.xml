<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/coupon_primary_color"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item android:bottom="2.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp"/>
                    <solid android:color="@color/coupon_search_bg"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item  android:state_focused="true">
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/coupon_primary_color"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>

            <item android:bottom="2.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp"/>
                    <solid android:color="@color/coupon_search_bg"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item >
        <layer-list>
            <!-- bottom strip item -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/coupon_search_strip_default" />
                    <corners android:radius="10dp" />
                </shape>
            </item>

            <!--background color-->
            <item android:bottom="2.5dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" />
                    <solid android:color="@color/coupon_search_bg" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>